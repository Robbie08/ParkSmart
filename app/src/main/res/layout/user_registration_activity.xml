<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout_registration"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".activities.RegisterActivity">



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/colorWhite">



        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:srcCompat="@drawable/parksmartlogo_croped"
            android:contentDescription="@string/parksmartlogo"
            android:layout_above="@+id/linearLayout"
            android:layout_alignParentStart="true" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:id="@+id/activity_register_register_button"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/colorWhite"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@drawable/my_button"
            android:layout_marginBottom="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:orientation="vertical"
            android:layout_marginBottom="44dp"
            android:layout_above="@+id/activity_register_register_button"
            android:layout_centerHorizontal="true">


            <EditText
                android:id="@+id/activity_registration_user_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColorHint="@color/colorBlack"
                android:textColor="@color/colorBlack"
                android:background="@drawable/input_outline"
                android:hint="@string/UsersName"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:maxLines="1" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:id="@+id/activity_registration_email"
                android:textColorHint="@color/colorBlack"
                android:textColor="@color/colorBlack"
                android:background="@drawable/input_outline"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:maxLines="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/activity_register_send_login_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="sendLogIn"
            android:text="@string/tvSendLogIn"
            android:textColor="@color/colorBlack"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
